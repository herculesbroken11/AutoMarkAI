# ============================================
# AI-Driven Marketing - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# AI Service API Keys
# ============================================
# Replicate API - For AI content generation
# Get your key from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=

# Google Gemini API - For AI content generation
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=
# Alternative name (some services use this)
GOOGLE_GENERATIVE_AI_API_KEY=

# Groq API - For fast AI inference
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=

# HeyGen API - For video generation
# Get your key from: https://app.heygen.com/settings
HEYGEN_API_KEY=

# Murf AI API - For voice generation
# Get your key from: https://murf.ai/
MURFAI_API_KEY=

# ============================================
# Social Media API Credentials
# ============================================
# Instagram Graph API
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_ACCOUNT_ID=
INSTAGRAM_ACCESS_TOKEN=

# Facebook Page API
# Get from: https://developers.facebook.com/apps/
FACEBOOK_PAGE_ACCESS_TOKEN=

# ============================================
# Blotato API (from client's JSON file)
# ============================================
# Blotato API Key for social media posting
# Get from: https://blotato.com/
BLOTATO_API_KEY=
BLOTATO_INSTAGRAM_ACCOUNT_ID=
BLOTATO_YOUTUBE_ACCOUNT_ID=
BLOTATO_TIKTOK_ACCOUNT_ID=
BLOTATO_FACEBOOK_ACCOUNT_ID=
BLOTATO_FACEBOOK_PAGE_ID=
BLOTATO_THREADS_ACCOUNT_ID=
BLOTATO_TWITTER_ACCOUNT_ID=
BLOTATO_LINKEDIN_ACCOUNT_ID=
BLOTATO_PINTEREST_ACCOUNT_ID=
BLOTATO_PINTEREST_BOARD_ID=
BLOTATO_BLUESKY_ACCOUNT_ID=

# ============================================
# Firebase Configuration
# ============================================
# These are public config values (safe to expose in client-side code)
# Get from: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# External Services
# ============================================
# OpenWeatherMap API - For weather data
# Get from: https://openweathermap.org/api
WEATHER_API_KEY=

# ============================================
# Application Configuration
# ============================================
# Base URL for the application
# In production, set to your actual domain
NEXT_PUBLIC_BASE_URL=http://localhost:9002

# Cron Job Secret - For securing cron endpoints
# Generate a random string for this
CRON_SECRET=
NEXT_PUBLIC_CRON_SECRET=

# Google Sheets URL (already configured in next.config.ts)
# NEXT_PUBLIC_GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/1wE4a4R7_aAUUNFgk2afxVngEwfgXTTyfaXg0sIZEicM/edit?usp=sharing
